{% block title %} Monsters list {% endblock %}

{% block body %}
    <table>
        <tr>
            <th>id</th>
            <th>name</th>
        </tr>
        {% for Monster in Monsters %}
        <tr>
            <td>{{ Monster.getId() }}</td>
            <td><a href="{{ path('monster_show', {'id': Monster.id}) }}">{{ Monster.getName() }}</a></td>
        </tr>
        {%  endfor %}
    </table>
{% endblock %}